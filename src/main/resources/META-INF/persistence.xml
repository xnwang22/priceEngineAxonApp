<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">
    <persistence-unit name="price" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.myproject.axom.priceengine.query.PriceEntry</class>
        <class>com.myproject.axom.priceengine.query.ProductEntry</class>
        <class>org.axonframework.eventstore.jpa.DomainEventEntry</class>
        <class>org.axonframework.eventstore.jpa.SnapshotEventEntry</class>
        <properties>
            <property name="hibernate.archive.autodetection" value="class"/>
        </properties>
    </persistence-unit>
</persistence>